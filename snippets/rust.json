{
  "closure": {
    "prefix": "cl",
    "body": "|$1| {$2}",
    "description": "Closure"
  },
  "#derive()": {
    "prefix": "derive",
    "body": "#[derive($1)]",
    "description": "Derive macro"
  },
  "pfn": {
    "prefix": "pfn",
    "body": [
      "pub fn ${1:name}(${2:arg}: ${3:Type}) -> ${4:RetType} {",
      "    ${5:todo!();}",
      "}"
    ],
    "description": "pub fn …(…) { … }"
  },
  "pafn": {
    "prefix": "pafn",
    "body": [
      "pub async fn ${1:name}(${2:arg}: ${3:Type}) -> ${4:RetType} {",
      "    ${5:todo!();}",
      "}"
    ],
    "description": "pub async fn …(…) { … }"
  },
  "afn": {
    "prefix": "afn",
    "body": [
      "async fn ${1:name}(${2:arg}: ${3:Type}) -> ${4:RetType} {",
      "    ${5:todo!();}",
      "}"
    ],
    "description": "async fn …(…) { … }"
  },
  "new": {
    "prefix": "new",
    "body": [
      "new() -> Self {",
      "    ${5:todo!();}",
      "}"
    ],
    "description": "New function"
  },
  "println": {
      "prefix": "print",
      "body": ["println!(\"${1}\")"],
      "description": "println!(…)"
  },
  "format": {
      "prefix": "fmt",
      "body": ["format!(\"${1}\")"],
      "description": "format!(…)"
  }
}
